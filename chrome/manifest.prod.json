{
  "version": "0.0.1",
  "name": "Page text replacer",
  "manifest_version": 2,
  "description": "Replace text in page",
  "browser_action": {
    "default_title": "Page Text Replacer",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "inject.html"
  ],
  "background": {
    "page": "background.html"
  },
  "permissions": [ "tabs", "storage",  "http://*/*", "activeTab" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
